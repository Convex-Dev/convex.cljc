;;
;;
;; Gathering all tests.
;;
;;


;;;;;;;;;;


(def fail?

  ^{}

  false)


;;;;;;;;;;


(defn exec

  ^{:doc {:description ""}}

  [path]

  ($.trx/precat `(($.time/push)
                  ($.file/exec ~(str "project/run/src/cvx/test/convex/test/"
                                     path
                                     ".cvx"))
                  ($.time/pop (when-not (zero? $.test/*n-fail*)
                                '(def fail?
                                      true))))))


;;;;;;;;;;


(when (and (defined? fast?)
           fast?)
  ($.test/filter.set (fn [meta]
                       (not (:slow? meta)))))


(exec "run")
(exec "run/account")
(exec "run/catch")
(exec "run/code")
(exec "run/file")
(exec "run/key_pair")
(exec "run/log")
(exec "run/perf")
(exec "run/process")
(exec "run/stream")
(exec "run/test")
(exec "run/time")
(exec "run/trx")


;;;;;;;;;;


($.stream/out! (str $/line
                    "~~~"
                    $/line
                    $/line
                    $.term/bold
                    (if fail?
                      (str $.term/fg.red
                           "Some tests did not pass.")
                      (str $.term/fg.green
                           "All tests from all files passed."))
                    $.term/reset
                    $/line))


(when (or (not (defined? dev?))
          (= dev?
             false))
  ($.process/exit (if fail?
                    42
                    0)))
