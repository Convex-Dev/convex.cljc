  ;; USEFUL BUNDLES OF ALIASES


  :bundle/module

  {:maestro/doc     "All major modules"
   :maestro/require [:module/app.fuzz
                     ;:module/bench
                     :module/break
                     :module/cvm
                     :module/gen
                     :module/net
                     :module/recipe
                     :module/shell]}


  :bundle/test
  {:maestro/doc        "Test utilities"
