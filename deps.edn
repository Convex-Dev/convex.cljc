   :maestro/require   [:ext/clojure
                       :ext/clojure.test.check
                       :module/break
                       :module/cvm]
   :maestro/root      "module/app.fuzz"}

  ;---

  :module/bench

  {:convex/type       #{:test}
   :extra-paths       ["module/bench/src/main/clj"]
   :maestro/doc       "Namespaces for benchmarking various areas of Convex." 
