(.t.def ..trx

  (.t.is (.t.ex :ARGUMENT
                (.trx (.trx.new.invoke .account.core
                                       :fail)))
         "Cannot transact over an actor")

  (.t.is (.t.ex :NOBODY
                (.trx (.trx.new.invoke #123456789
                                       'foo
                                       {:sequence 1})))
         "Inexistent account")

  (.t.is (.t.ex :ARGUMENT
                (.trx 42))
         "Not a transaction"))



(.t.def ..trx.new.call

  (def trx
       (.trx.new.call #0
                      #1
                      'foo
                      [:a :b]
                      {:offer    1000
                       :sequence 42}))
  (.t.is (= '(foo :a :b)
            (:call trx)))

  (.t.is (= 1000
            (:offer trx)))

  (.t.is (= #0
            (:origin trx)))

  (.t.is (= 42
            (:sequence trx)))

  (.t.is (= #1
            (:target trx)))

  (.t.is (.t.ex :ARGUMENT
                (.trx.new.call :fail
                               #1
                               'fn
                               nil
                               {:sequence 0}))
         "Not an origin")

  (.t.is (.t.ex :ARGUMENT
                (.trx.new.call #0
                               :fail
                               'fn
                               nil))
         "Not an callable address")

  (.t.is (.t.ex :ARGUMENT
                (.trx.new.call #0
                               #1
                               :fail
                               nil))
         "Not a function name")

  (.t.is (.t.ex :ARGUMENT
                (.trx.new.call #0
                               #1
                               'fn
                               42))
         "Not args")

  (.t.is (.t.ex :ARGUMENT
                (.trx.new.call #0
                               #1
                               'fn
                               nil
                               {:offer :fail}))
         "Not an offer")

  (.t.is (.t.ex :ARGUMENT
                (.trx.new.call #0
                               #1
                               'fn
                               nil
                               {:offer -1}))
         "Negative offer")

  (.t.is (.t.ex :ARGUMENT
                (.trx.new.call #0
                               #1
                               'fn
                               nil
                               {:sequence :fail}))
         "Not a sequence ID")

  (def a
       (deploy '(do
                  (defn f
                    ^:callable?
                    [n]
                    [*offer*
                     (inc n)]))))

  (.t.is (= [0
             43]
            (.trx (.trx.new.call .account.genesis
                                 a
                                 'f
                                 [42])))
         "Default offer")

  (.t.is (= [1000
             43]
            (.trx (.trx.new.call .account.genesis
                                 a
                                 'f
                                 [42]
                                 {:offer 1000})))
         "Given offer")

  (.t.is (.t.ex :SEQUENCE
                (.trx (.trx.new.call .account.genesis
                                     a
                                     'f
                                     [42]
                                     {:sequence -1})))
                "Wrong sequence ID"))
  


(.t.def ..trx.new.invoke

  (def trx
       (.trx.new.invoke #42
                        'some-code
                        {:sequence 100}))

  (.t.is (= 'some-code
            (:command trx)))

  (.t.is (= #42
            (:origin trx)))

  (.t.is (= 100
            (:sequence trx)))

  (.t.is (.t.ex :ARGUMENT
                (.trx.new.invoke :fail
                                 'some-code
                                 {:sequence 100}))
         "Not an address")

  (.t.is (.t.ex :ARGUMENT
                (.trx.new.invoke #42
                                 'some-code
                                 {:sequence :fail}))
         "Not a sequence ID")

  (.t.is (= 0
            (.trx (.trx.new.invoke .account.genesis
                                   '(def from-test
                                         0)
                                   {:sequence (inc (:sequence (account .account.genesis)))})))
         "With sequence ID")

  (.t.is (= 0
            .account.genesis/from-test))

  (.t.is (not (= .account.genesis
                 *address*))
         "Got the old execution context back")

  (.t.is (= 1
            (.trx (.trx.new.invoke .account.genesis
                                   '(def from-test
                                         1))))
         "Without sequence ID")

  (.t.is (= 1
            .account.genesis/from-test))

  (.t.is (.t.ex :SEQUENCE
                (.trx (.trx.new.invoke .account.genesis
                                       123456789123456789
                                       {:sequence -1})))
         "Bad sequence ID"))



(defn -new.multi

  ^:private?

  [f-multitrx mode]

  (def trx-0
       (.trx.new.transfer #1
                          #2
                          100
                          {:sequence 0}))

  (def trx-1
       (.trx.new.transfer #1
                          #2
                          100
                          {:sequence 1}))

  (def trx+
       [trx-0
        trx-1])

  (def option+
       {:sequence 3})

  (def multitrx
       (f-multitrx #1
                   trx+
                   option+))

  (.t.is (= mode
            (:mode multitrx))
         "Mode")

  (.t.is (= #1
            (:origin multitrx))
         "Origin")

  (.t.is (= 3
            (:sequence multitrx))
         "Sequence ID")

  (.t.is (= [trx-0
             trx-1]
            (:txs multitrx))
         "Child transactions")

  (.t.is (.t.ex :ARGUMENT
                (f-multitrx :fail
                            trx+
                            option+))
         "Not an origin")

  (.t.is (.t.ex :ARGUMENT
                (f-multitrx #1
                            :fail
                            option+))
         "Not a Vector of transactions")

   (.t.is (.t.ex :ARGUMENT
                (f-multitrx #1
                            [42]
                            option+))
         "Vector of transactions mistyped")

   (.t.is (.t.ex :ARGUMENT
                (f-multitrx #1
                            trx+
                            {:sequence :fail}))
          "Not a sequence ID"))



