;;
;;
;; Testing `convex.shell`.
;;
;;


;;;;;;;;;;


(def T
     $.test)


;;;;;;;;;; Test suite


(defn suite.main

  ^{:doc {:description "Main test suite."}}

  []

  (T/group '((T/path.conj 'convex.shell)

             (T/trx '(str? $/line)
                    {:description "Platform dependent newline is set by the shell."})

             (T/trx '(str? $/version)
                    {:description "Shell version is set by the shell."})

             (T/trx '(str? $/version.convex)
                    {:description "Convex version is set by the shell."})

             (+ 2
                42)

             (def res
                  $/*result*)

             (T/trx '(= 44
                        res)
                    {:description "Result symbol is updated."}))))


;;;


(suite.main)
(T/print "convex.shell")
